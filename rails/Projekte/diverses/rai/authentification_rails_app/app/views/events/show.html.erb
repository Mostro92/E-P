<h1><%= @event.name %></h1>
<% if @likers.any? %>
<div class="panel">
	<div class="row">
		<div class="medium-2 columns">
			liked?
		</div>
		<div class="medium-10 columns">
			<% @likers.each do | liker | %>
				<%= link_to liker.name , user_path( liker.id ) %>
			<% end %>
		</div>
	</div>
</div>
<% end %>
<% if !@liker %>
	<%= button_to "like" , event_likes_path( @event.id ) %>
<% else %>
	<%= button_to "dislike" , event_like_path( @event.id , @current_user.id ) , method: :delete %>
<% end %>
<div class="panel">
	<div class="row">
		<div class="medium-3 columns">
			<%= image_for(@event) %>
		</div>
		<div class="medium-9 columns">
			<%= @event.desciption %>
		</div>
	</div>
</div>
<div class="panel">
	<div class="row">
		<div class="medium-2 columns">
			Wann?
		</div>
		<div class="medium-10 columns">
			<%= @event.start_at %>
		</div>
	</div>
	<div class="row">
		<div class="medium-2 columns">
			Wo?
		</div>
		<div class="medium-10 columns">
			<%= @event.location %>
		</div>
	</div>

	<div class="row">
		<div class="medium-2 columns">
			Preis
		</div>
		<div class="medium-10 columns">
			<%= format_price(@event) %>
		</div>
	</div>
</div>

<ul class="button-group">
	<li><%= link_to "registrierte Member", event_registrations_path(@event.id), class: "button info big-btn" %></li>
	<li><%= link_to "registrieren", new_event_registration_path(@event.id), class: "button info big-btn" %></li>
	<li><%= link_to "Edit", edit_event_path(@event.id), class: "button info big-btn" %></li>
</ul>