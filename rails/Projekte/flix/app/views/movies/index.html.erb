<h1>Movies</h1>

<p>Diverse Movies</p>

<table>
<% @movies.each do |movie| %>
	<tr>
		
		<td>
		
			<%=	movie.title	%>
		
		</td>
	
		<td>
			<%= movie.rating %>

		</td>
	
		<td>
			<%= movie.total_gross %>

		</td>
		<td>
			<%= truncate(movie.description, length: 40) %>

		</td>
		<td>
			<%= movie.released_on %>

		</td>
		<td>
			<%= link_to "Reviews", movie_reviews_path(movie.id) %>

		</td>
		<td>
			<%= link_to "Show", movie_path(movie.id) %>
		</td>
		<td>
			<%= link_to "Edit", edit_movie_path(movie.id) %>

		</td>
		<td>
			<%= link_to "Delete", edit_movie_path(movie.id),method: :delete, data: { confirm: 'Are you sure?' } %>

		</td>
	</tr>


<% end %>

</table>
<p><%= link_to "Neues Movie", new_movie_path %></p>